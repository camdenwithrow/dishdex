package templates

templ Layout(title string) {
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{ title }</title>
	<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
	<div class="container">
		<nav class="nav">
			<a href="/">Home</a>
			<a href="/health">Health</a>
		</nav>
		{ children... }
	</div>
</body>

</html>
}
